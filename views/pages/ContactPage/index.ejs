<!DOCTYPE html>
<html>
  <header>
    <%- include('header'); %>
  </header>
  <head>
    <%- include('../../partials/head'); %>
  </head>
  
  <body class="container">
    <main style="padding-top: 50px; padding-bottom: 50px;">
      <form id="myForm" onsubmit="submitForm(event)">
        <div class="form-group">
          <label for="exampleFormControlInput1">Your name</label>
          <div class="row">
            <div class="col">
              <input type="text" class="form-control" placeholder="First name" id="name">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last name">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Email address</label>
          <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        <div class="form-group">
          <label for="message">Leave a message</label>
          <textarea class="form-control" id="message" rows="5"></textarea>
        </div>
        <!-- Additional form fields -->
        <div class="text-center" style="padding-top: 10px;">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
      </form>

      <script>
        function submitForm(event) {
          event.preventDefault(); // Prevent the form from submitting normally
        
          const nameInput = document.getElementById('name');
          const visitorName = nameInput.value;
      
          fetch('/', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ name: visitorName })
          })
          .then(response => {
            if (response.ok) {
              // Redirect the user to the home page after successful submission
              window.location.href = '/';
            } else {
              // Handle error response if needed
            }
          })
          .catch(error => {
            // Handle error if needed
          });
        }
      </script>

      <div class="center-row" style="padding-top: 5%;">
        <div class="row text-center no-gutters">
          <div class="col">
           <h1>
            <%- include('../../partials/icon',{link:'https://github.com/5tluca5', name:'github'}); %>
            <%- include('../../partials/icon',{link:'https://www.linkedin.com/in/lucas-ng-135201209/', name:'linkedin'}); %>
            <%- include('../../partials/icon',{link:'mailto:tng39@my.centennialcollege.ca', name:'envelope'}); %>
            <%- include('../../partials/icon',{link:'https://web.whatsapp.com/', name:'whatsapp'}); %>
            <%- include('../../partials/icon',{link:'https://www.instagram.com/lulu.meow5/', name:'instagram'}); %>
            <%- include('../../partials/icon',{link:'https://www.facebook.com/DonaldTrump', name:'facebook'}); %>
            <%- include('../../partials/icon',{link:'https://twitter.com/home', name:'twitter'}); %>
           </h1>

        </div>
      </div>
    </main>
  </body>
  <footer>
    <%- include('../../partials/footer') %>
  </footer>
</html>

